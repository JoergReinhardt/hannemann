<% provide(:title, "User Registrierungs Seite") %>
<h1>User Registrierung</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :login %>
      <%= f.text_field :login %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Passwort" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Passwort wiederholen" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "User Konto anlegen", class: "btn btn-large btn-primary"%>
    <% end %>
  </div>
</div>
