<% provide(:title, "Anmelden") %>
<h1>Anmelden</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :login %>
      <%= f.text_field :login %>

      <%= f.label :password, "Passwort" %>
      <%= f.password_field :password %>

      <%= f.submit "Anmelden", class: "btn btn-large btn-promary" %>

    <% end %>
  </div>
</div>
